# include <stdio.h>
# include <stdlib.h>
# include <time.h>

int main (){

    int opcao;
    int
    numerosecreto,
    palpite;

    printf("menu Principal\n");
    printf(" 1. Iniciar Jogon");
    printf("2. Ver Regras\n");
    printf("3. Sair\n");
    printf("Escolha uma opção\n");
    scanf("%d", &opcao);
    switch (opcao)
    {
    case 1:
    srand(time(0));
    numerosecreto = rand() % 10;
    printf("Adivinhe o número (entre 1 e 10):\n");
    scanf("%d", &palpite);
    if (palpite == numerosecreto) {
        printf("Parabéns Você acertou!\n");
    } else {
        printf("Você errou. O número era:%d.\n", numerosecreto);
    }
        break;
    case 2:
    printf("1. Escolha uma opção no menu\n");
    printf("2. Se você escolher 'Inciar jogo' adivnhe o número secreto\n");
    printf("3. O jogo termina quando você escolhe 'Sair'\n");
        break;

    case 3:
    printf("Opção invalida. Tente novamente\n");
    
    }

return;
}